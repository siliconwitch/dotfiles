{
    // UI settings
    "base_keymap": "Cursor",
    "theme": "Gruvbox Dark",
    "buffer_font_family": "RobotoMono Nerd Font Mono",
    "buffer_font_size": 12,
    "ui_font_family": ".SystemUIFont",
    "ui_font_size": 14,
    "icon_theme": "Catppuccin Latte",
    "tab_size": 4,
    "current_line_highlight": "none",

    "indent_guides": {
        "enabled": false
    },
    "gutter": {
        "min_line_number_digits": 1
    },
    "scrollbar": {
        "show": "never"
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "project_panel": {
        "hide_root": true,
        "indent_guides": { "show": "never" },
        "folder_icons": false
    },
    "status_bar": {
        "active_language_button": false,
        "cursor_position_button": false
    },

    // Git settings
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },

    // AI settings
    "show_edit_predictions": false,

    "agent": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-opus-4-5"
        },
        "model_parameters": []
    }
}
